# Base de datos PostgreSQL
DATABASE_URL="postgresql://usuario:password@localhost:5432/meeko_db?schema=public"

# JWT Secret (generar uno seguro para producción)
JWT_SECRET="tu-super-secreto-jwt-cambiar-en-produccion"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Servidor
PORT=3000
NODE_ENV="development"

# Frontend URL (para CORS)
FRONTEND_URL="http://localhost:4321"

# Upload de imágenes
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=5242880
USE_S3=false

# AWS S3 (capa gratuita - opcional)
# Configurar estas variables para usar S3 en lugar de almacenamiento local
# Capa gratuita: 5GB de almacenamiento, 20,000 GET requests, 2,000 PUT requests/mes
# Ver docs/AWS_S3_SETUP.md para instrucciones detalladas
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_BUCKET_NAME=""
AWS_CLOUDFRONT_URL=""

# API
API_PREFIX="/api/v1"
